<VirtualHost <%= "#{@host_ip}:#{@host_port}" %>>

  DocumentRoot "<%= @document_root %>"

  Alias /files <%= @document_root %>/files
  <Directory <%= @document_root %>/files >
    Options -Indexes
  </Directory>

  <% (@files || {}).each do |file, values| %>
  Alias /<%= values['path'] %> <%= @document_root %>/<%= values['path'] %>
  <% end %>

</VirtualHost>
